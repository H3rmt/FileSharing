---
import Layout from "../layouts/Layout.astro";
import ImportantText from "src/components/importantText";
import { Login } from "src/components/Login";
---

<Layout title="Local File Share">
  <main class="m-auto flex h-screen flex-col p-2 text-text">
    <h1 class="m-0 mb-4 text-center text-4xl font-bold">
      Welcome to <ImportantText>Local File Share</ImportantText>
    </h1>
    <div class="grid flex-1 content-center justify-center">
      <div class="rounded-lg bg-textbg p-1">
        <div
          class="flex flex-col justify-between gap-2 rounded-lg bg-background p-6 text-center"
        >
          <h2 class="m-0 mb-4 text-4xl font-bold">
            <ImportantText>Login</ImportantText>
          </h2>
          <Login client:load />
        </div>
      </div>
    </div>
  </main>
</Layout>

